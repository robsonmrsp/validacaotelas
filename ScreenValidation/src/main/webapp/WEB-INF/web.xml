<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<servlet>
		<servlet-name>greetServlet</servlet-name>
		<servlet-class>br.com.m2msolutions.server.GreetingServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>greetServlet</servlet-name>
		<url-pattern>/screenvalidation/greet</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>ScreenValidation.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>SystemServiceServlet</servlet-name>
		<servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
		<init-param>
			<param-name>services</param-name>
			<param-value />
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>SystemServiceServlet</servlet-name>
		<url-pattern>/_ah/spi/*</url-pattern>
	</servlet-mapping>

	<!-- Servico da consulta de atendimento -->
	<servlet>
		<servlet-name>InquiryAttendanceService</servlet-name>
		<servlet-class>br.com.m2msolutions.server.InquiryAttendanceServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>InquiryAttendanceService</servlet-name>
		<url-pattern>/screenvalidation/inquiryAttendanceService</url-pattern>
	</servlet-mapping>

	<!-- Servico do widget de eventos críticos -->
	<servlet>
		<servlet-name>CriticalEventsService</servlet-name>
		<servlet-class>br.com.m2msolutions.server.CriticalEventsServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CriticalEventsService</servlet-name>
		<url-pattern>/screenvalidation/criticalEventsService</url-pattern>
	</servlet-mapping>

	<!-- Servico da tela de configuração de eventos. -->
	<servlet>
		<servlet-name>CriticalEventsConfigurationService</servlet-name>
		<servlet-class>br.com.m2msolutions.server.CriticalEventsConfigurationServiceImpl</servlet-class>

	</servlet>
	<servlet-mapping>
		<servlet-name>CriticalEventsConfigurationService</servlet-name>
		<url-pattern>/screenvalidation/criticalEventsConfigurationService</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>CriticalEventsAttendanceService</servlet-name>
		<servlet-class>br.com.m2msolutions.server.CriticalEventsAttendanceServiceImpl</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>CriticalEventsAttendanceService</servlet-name>
		<url-pattern>/screenvalidation/CriticalEventsAttendanceService</url-pattern>
	</servlet-mapping>

</web-app>
